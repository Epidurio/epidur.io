!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Regional2'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Regional2'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.17/d3.js'
    = stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.18/c3.css'
    = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.18/c3.js'
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield

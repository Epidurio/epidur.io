<% if user_signed_in? %>
    <%= link_to 'Edit account', edit_user_registration_path, class: 'nav-link nav-item btn btn-light' %>
    <%= link_to 'Log out', destroy_user_session_path, :method => :delete, class: 'nav-link nav-item btn btn-light' %>
<% else %>
    <%= link_to 'Log in', new_user_session_path, class: 'nav-link nav-item btn btn-light' %>
    <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link nav-item btn btn-info' %>
<% end %>
